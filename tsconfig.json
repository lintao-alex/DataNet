{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "strict": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "es6",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}